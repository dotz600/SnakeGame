<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" KeyDown="Canvas_KeyDown" KeyUp="Canvas_KeyUp">
    <Canvas x:Name="myCanvas" Focusable="True" Background="#FFFED871">
        <Button x:Name="startButton" Content="Start Game" Canvas.Left="275" Canvas.Top="300" Height="30" Width="70" Background="#FF36FC00" Click="Button_Click" />
    </Canvas>
</Window>
